<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <fragment
        android:id="@+id/orderfragments"
        android:name="com.next.grocerysale.OrderListFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
         />

    <Button
        android:id="@+id/cancelorderBT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/signupbuttonselector"
        android:layout_marginLeft="57dp"
        android:padding="10dp"
            android:onClick="onClick"
        android:text="@string/cancelorder" />

    <Button
        android:id="@+id/saveorderBT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="27dp"
        android:layout_toRightOf="@+id/cancelorderBT"
        android:background="@drawable/login_btn_selector"
        android:onClick="onClick"
        android:padding="10dp"
        android:text="@string/saveorder" />

</RelativeLayout>